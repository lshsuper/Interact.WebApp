
@{
    Layout = "~/Areas/Home/Views/Shared/_LayoutScreenForPC.cshtml";
    ViewBag.Title = "抽奖";
}
<style>
    .screen-body {
        position: absolute;
        top: 17%;
        height: 72%;
        width: 96%;
        left: 50%;
        margin-left: -45%;
    }

    .screen-body-left {
        background-color: rgba(53, 44, 87, 0.7);
        height: 100%;
        margin-right: 1%;
    }

    .screen-body-right {
        background-color: rgba(53, 44, 87, 0.7);
        height: 100%;
        padding: 0px;
    }

    .luckydraw-title {
        width: 100%;
        height: 60px;
        position: relative;
        color: #fff;
        font-size: 35px;
        line-height: 60px;
        font-family: Arial, Helvetica, sans-serif;
        border-bottom: 1px solid rgba(255, 255, 255, 0.4);
    }

        .luckydraw-title > pan:first-child {
            margin-left: 50px;
        }

        .luckydraw-title > pan:last-child {
            right: 10px;
            text-align: right;
        }

    .luckydraw-body {
        position: absolute;
        width: 300px;
        height: 300px;
        top: 50%;
        left: 50%;
        margin: -150px auto auto -150px;
    }

        .luckydraw-body > .user {
            position: relative;
            width: 200px;
            height: 200px;
            background-size: contain;
            background-image: url('/Areas//Home/Content/img/bg/bg-nouser.jpg');
            margin: 15px auto;
            overflow: visible;
            border: 1px solid #fff;
            border-radius: 8px;
            box-shadow: 3px 5px 3px rgba(0, 0, 0, 0.11);
        }

            .luckydraw-body > .user > .nick-name {
                position: absolute;
                width: 200%;
                height: 30px;
                line-height: 20px;
                left: -50%;
                bottom: -34px;
                font-size: 18px;
                color: #fff;
                text-align: center;
                display: block;
                text-shadow: 0 1px 3px rgba(0,0,0,0.45);
            }

        .luckydraw-body > .luckdraw-btn {
            position: absolute;
            left: 52%;
            margin-left: -60px;
            bottom: 10px;
            width: 100px;
            text-align: center;
            padding: 8px 10px 12px 10px;
            background-color: #fff;
            border-radius: 8px;
            font-weight: bolder;
            cursor: pointer;
            color: #E74145;
            box-shadow: 0 2px 0px 3px rgba(0,0,0,0.15), 0 -3px 0px 0px #D0D0D0 inset;
        }

    .luckydraw-footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
        right: 0%;
        border-top: 1px solid rgba(255, 255, 255, 0.4);
    }

        .luckydraw-footer > div {
            height: 100%;
        }

    .choice-group {
        height: 100%;
        line-height: 59px;
    }

    .luckydraw-footer > div:last-child {
        line-height: 60px;
        margin-right: 5px;
    }

    .luckydraw-footer > div:last-child {
        position: absolute;
        right: 10px;
        height: 40px;
        top: 50%;
        margin-top: -20px;
        line-height: 40px;
        width: 105px;
        text-align: center;
        font-size: 20px;
        padding: 0 10px;
        color: #fff;
        border: 1px solid #fff;
        cursor: pointer;
        border-radius: 8px;
        -moz-border-radius: 8px;
        -webkit-border-radius: 8px;
    }

        .luckydraw-footer > div:last-child:hover {
        }

    .menu-list {
        width: 100%;
        height: 93%;
        position: relative;
        float: left;
        background-color: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.4);
        padding: 3px;
    }

        .menu-list > .menu-opt {
            position: relative;
            width: 100%;
            height: 70px;
            line-height: 70px;
            margin: 3px auto;
            background: rgba(255, 255, 255,0.15);
            overflow: hidden;
        }

            .menu-list > .menu-opt > .user-no {
                width: 30px;
                height: 30px;
                color: #E62841;
                position: relative;
                top: 20px;
                text-align: center;
                margin-left: 10px;
                font-size: 16px;
                line-height: 30px;
                background-color: #FFF;
                border-radius: 100%;
            }

            .menu-list > .menu-opt > .user-pic {
                position: absolute;
                display: inline-block;
                width: 60px;
                height: 60px;
                background: url('/Areas/Home/Content/img/bg/bg-nouser.jpg') center no-repeat;
                background-size: contain;
                top: 6px;
                left: 50px;
                border-radius: 100%;
            }

            .menu-list > .menu-opt > .user-nick {
                position: absolute;
                height: 60px;
                width: 500%;
                top: 6px;
                left: 131px;
                overflow: visible;
                font-size: 20px;
                line-height: 60px;
                text-align: left;
                display: block;
                color: #fff;
                text-shadow: 0 1px 3px rgba(0,0,0,0.45);
            }

    .afresh-choice {
        width: 100%;
        height: 50px;
        position: absolute;
        right: 0px;
        background-color: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.4);
        border-top: 0px;
        padding: 3px;
        bottom: 0px;
        overflow: auto;
    }

    .afresh-choice-btn {
        position: absolute;
        left: 50%;
        margin-left: -60px;
        bottom: 4px;
        width: 100px;
        text-align: center;
        padding: 8px 10px 12px 10px;
        background-color: #fff;
        border-radius: 8px;
        font-weight: bolder;
        cursor: pointer;
        color: #E74145;
        box-shadow: 0 2px 0px 3px rgba(0,0,0,0.15), 0 -3px 0px 0px #D0D0D0 inset;
    }
</style>

<div class="row screen-body">
    <div class="col-md-7 screen-body-left">
        <div class="luckydraw-title clearfix">
            <span class="pull-left">抽奖</span>
            <span class="pull-right"><span id="total-count"></span>人</span>
        </div>
        <div class="luckydraw-body">
            <div class="user" id="user-headimg">
                <span class="nick-name" id="user-nickname"></span>
            </div>
            <div class="luckdraw-btn" id="start-luckdraw-btn">
                开始抽奖
            </div>
            <div class="luckdraw-btn" id="end-luckdraw-btn" style="display:none">
                停止抽奖
            </div>
        </div>
        <div class="luckydraw-footer clearfix">
            <div class="pull-left">
                <div class="form-inline choice-group">
                    <div class="form-group">
                        <label class="label">请选择奖项:</label>
                        <select class="form-control" id="award-select">
                            <option value="-1">--请选择奖项--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="label">选择人数:</label>
                        <select class="form-control" id="num-select">
                            <option value="-1">--请选择中奖人数--</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="pull-right" id="reload-btn">
                重新加载
            </div>
        </div>
    </div>
    <div class="col-md-4  screen-body-right">
        <div class="menu-list" id="winner-menu">

        </div>
        <div class="afresh-choice">
            <div class="afresh-choice-btn">
                重新抽奖
            </div>
        </div>
    </div>
</div>
<div class="mask-layer"></div>
<script id="winner-info-tmpl" type="text/html">
    <div class="menu-opt animated rubberBand">
        <div class="user-no">{{sort}}</div>
        <div class="user-pic" style="background-image:url({{headimg}})"></div>
        <div class="user-nick">{{nickname}}</div>
    </div>
</script>
@section scripts{
    <script src="~/Content/lib/art-template-master/template-web.js"></script>
    <script src="~/Content/lib/layer-v3.1.1/layer-v3.1.1/layer/layer.js"></script>
    <link href="~/Content/lib/animate/animate.css" rel="stylesheet" />
    <script>
        var data=@Html.Raw(ViewBag.data);
    </script>
    <script>
        (function () {
            //抽奖区块
            var luckdraw = {
                winnerMenu: $('#winner-menu'),
                winnerInfoTmpl: "winner-info-tmpl",
                startLuckdrawBtn: $('#start-luckdraw-btn'),
                endLuckdrawBtn: $('#end-luckdraw-btn'),
                nextroundLuckdrawBtn: $('#nextround-luckdraw-btn'),
                awardSelect: $('#award-select'),
                numSelect: $('#num-select'),
                userHeadimg: $('#user-headimg'),
                userNickName: $('#user-nickname'),
                reloadBtn: $('#reload-btn'),
                afrashChoice: $('.afresh-choice-btn'),
                totalCount: $('#total-count'),
                isloop: false,
                _timer: null,
                maskLayer: $('.mask-layer'),
                number: 0,
                defaultUserHeadImage: "/Areas//Home/Content/img/bg/bg-nouser.jpg",
                buildWinnerInfo: function (userinfo) {
                    var _self = this;
                    var html = template(_self.winnerInfoTmpl, userinfo);
                    _self.winnerMenu.append(html);
                },
                //洗牌
                shuffle: function (array) {
                    var m = array.length,
                        t, i;
                    // 如果还剩有元素…
                    while (m) {
                        // 随机选取一个元素…
                        i = Math.floor(Math.random() * m--);
                        // 与当前元素进行交换
                        t = array[m];
                        array[m] = array[i];
                        array[i] = t;
                    }
                    return array;
                },
                //图片循环滚动
                scrollImage: function () {
                    var _self = this;
                    var currentArr = _self.shuffle(data.record);
                    var currentRecord = currentArr[0];
                    _self.userHeadimg.css('background-image', "url(" + currentRecord.HeadImage + ")");
                    _self.userNickName.text(currentRecord.NickName);
                    _self._timer = setTimeout(function () {
                        _self.scrollImage();
                    }, 50);
                },
                //抽奖代理
                luckdrawAgrent: function (callback) {
                    $.ajax({
                        type: "post",
                        url: "/home/screen/LotteryDraw",
                        async: false,
                        data: { activityId: callback.activityId, number: callback.number, activityAwardId: callback.level },

                        success: function (data) {
                            if (data.Status) {
                                callback.succ(data);
                            } else {
                                callback.fail(data);
                            }
                        },
                        error: function (error) {
                            callback.error(error);
                        }
                    });
                },
                //从待抽奖列表中移除中奖的人信息
                removeOneSignInRecord: function (recordId) {
                    var index = -1;
                    for (var i = 0; i < data.record.length; i++) {
                        var currentRecord = data.record[i];
                        if (currentRecord.Id == recordId) {
                            index = i;
                            break;
                        }
                    }
                    if (index != -1)
                        data.record.splice(index, 1);
                },
                lotteryDrawStrategy: function () {
                    var _self = this;
                    var level = _self.awardSelect.val();//奖品等级
                    _self.endLuckdrawBtn.hide();
                    _self.startLuckdrawBtn.show();
                    _self.maskLayer.show();
                    _self.luckdrawAgrent(
                        {
                            activityId: data.activityId,
                            number: 1,
                            level: level,
                            succ: function (xdata) {
                                clearTimeout(_self._timer);
                                var currentRecord = xdata.Data[0];
                                var index = _self.winnerMenu.children('.menu-opt').length;
                                data.totalCount--;
                                _self.removeOneSignInRecord(currentRecord.Id);
                                var total = parseInt(_self.totalCount.text());
                                _self.totalCount.text(total - 1);
                                //展示左侧中奖人信息
                                _self.userNickName.text(currentRecord.NickName);
                                _self.userHeadimg.css('background-image', "url(" + currentRecord.HeadImage + ")");
                                //展示右侧中奖人信息
                                var userInfo = { sort: index + 1, nickname: currentRecord.NickName, headimg: currentRecord.HeadImage };
                                _self.buildWinnerInfo(userInfo);
                                _self.number--;
                                if (_self.number <= 0) {
                                    _self.isloop = false;
                                    _self.startLuckdrawBtn.text("开始抽奖");
                                    _self.maskLayer.hide();
                                } else {
                                    _self.startLuckdrawBtn.text("开始抽奖(" + _self.number + ")");
                                    var _timeOut01 = setTimeout(function () {
                                        _self.scrollImage();
                                        var _timeOut02 = setTimeout(function () {
                                            _self.startLuckdrawBtn.hide();
                                            _self.endLuckdrawBtn.show();
                                            _self.lotteryDrawStrategy();
                                            clearTimeout(_timeOut02);
                                            clearTimeout(_timeOut01);
                                        }, 2000);
                                    }, 500);
                                }

                            },
                            fail: function (xdata) {

                            }
                        });
                },
                event: function () {
                    var _self = this;
                    //开始抽奖
                    _self.startLuckdrawBtn.click(function () {
                        if (_self.isloop) {
                            layer.msg("正在进行中,不能停止", { icon: 5 });
                            return;
                        }
                        if (data.totalCount <= 0) {
                            layer.msg("待抽奖人数不足", { icon: 5 });
                            return;
                        }
                        var level = parseInt(_self.awardSelect.val());
                        if (level <= 0) {
                            layer.msg("请选择奖品等级", { icon: 5 });
                            return;
                        }
                        var number = parseInt(_self.numSelect.val());  //抽取人数
                        if (number <= 0) {
                            layer.msg("请选择抽取人数", { icon: 5 });
                            return;
                        }
                        _self.number = number;  //赋值
                        $(this).hide();
                        _self.endLuckdrawBtn.show();
                        _self.scrollImage();
                    });
                    //停止抽奖
                    _self.endLuckdrawBtn.click(function () {
                        if (_self.isloop) {
                            layer.msg("正在进行中,不能停止", { icon: 5 });
                            return;
                        }
                        _self.isloop = true;
                        _self.lotteryDrawStrategy();
                    });
                    //重新加载
                    _self.reloadBtn.click(function () {
                        if (_self.isloop) {
                            layer.msg("正在进行中,不能停止", { icon: 5 });
                            return;
                        }
                        window.location.reload();

                    });
                    //重新抽奖
                    _self.afrashChoice.click(function () {
                        $.post('/home/screen/RefrashWinnerMenu', { activityId: data.activityId }, function (data) {
                            if (data.Status) {
                                window.location.reload();
                            } else {
                                //重新加载失败
                            }
                        });
                    });
                    _self.awardSelect.change(function () {
                        _self.winnerMenu.empty();
                        var awardId = _self.awardSelect.val();
                        if (awardId == -1) {

                            _self.userHeadimg.css('background-image', "url(" + _self.defaultUserHeadImage + ")");
                            _self.userNickName.text("");
                            return;
                        }

                        var index = layer.load(0, {
                            shade: [0.5, '#fff'] //0.1透明度的白色背景
                        });
                        $.post("/home/screen/GetWinners", { activityId: data.activityId, activityAwardId: awardId }, function (xdata) {
                            layer.close(index);
                            if (xdata.Status) {
                                for (var i = 0; i < data.awards.length; i++) {

                                    if (data.awards[i].Id == awardId) {
                                        _self.userHeadimg.css('background-image', "url(" + data.awards[i].AwardImage + ")");
                                        _self.userNickName.text(data.awards[i].Name);
                                        xdata.Data.forEach(function (ele, index) {
                                            var userInfo = { sort: index + 1, nickname: ele.NickName, headimg: ele.HeadImage };
                                            _self.buildWinnerInfo(userInfo);
                                        });
                                        break;
                                    }
                                }

                            } else {

                            }

                        });

                    });
                },
                init: function () {
                    var _self = this;
                    _self.event();
                    _self.totalCount.text(data.totalCount);
                    data.awards.forEach(function (ele) {
                        _self.awardSelect.append("<option value=" + ele.Id + ">" + ele.Name + "</option>");
                    });
                }
            }
            //初始化
            luckdraw.init();
        })()
    </script>
}
